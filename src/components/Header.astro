<script>
    document.addEventListener("DOMContentLoaded", function () {
        // ANIMACIÓN MENÚ DESPLEGABLE DE LOS MÓVILES
        const menuToggle = document.getElementById("menuToggle");
        const closeButton = document.getElementById("closeButton");
        const mobileMenu = document.getElementById("mobileMenu");
        const navegacionTecnologias = document.querySelector(
            "#navegacionTecnologias",
        );
        const contactoBtn = document.querySelector("#contactoBtn");
        const tecnologiasBtn = document.querySelector("#tecnologiasBtn");
        const experienciaBtn = document.querySelector("#experienciaBtn");
        const descubriendoBtn = document.querySelector("#descubriendoBtn");
        const historiaBtn = document.querySelector("#historiaBtn");

        if (historiaBtn) {
            historiaBtn.addEventListener("click", cerrarMenu);
        }

        if (descubriendoBtn) {
            descubriendoBtn.addEventListener("click", cerrarMenu);
        }

        if (contactoBtn) {
            contactoBtn.addEventListener("click", cerrarMenu);
        }

        if (tecnologiasBtn) {
            tecnologiasBtn.addEventListener("click", cerrarMenu);
        }

        if (experienciaBtn) {
            experienciaBtn.addEventListener("click", cerrarMenu);
        }

        function toggleMenu() {
            menuToggle.classList.toggle("active");
            mobileMenu.style.right = "0";
        }

        function cerrarMenu() {
            menuToggle.classList.remove("active");
            mobileMenu.style.right = "-100%";
        }

        if (menuToggle) {
            menuToggle.addEventListener("click", toggleMenu);
        }

        if (closeButton) {
            closeButton.addEventListener("click", cerrarMenu);
        }
    });
</script>

