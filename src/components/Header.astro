            display: flex;
            justify-content: space-evenly;
            align-items: center;
            height: 20vh;
        }

        .cabecera {
            color: white;
            font-family:
                system-ui,
                -apple-system,
                BlinkMacSystemFont,
                "Segoe UI",
                Roboto,
                Oxygen,
                Ubuntu,
                Cantarell,
                "Open Sans",
                "Helvetica Neue",
                sans-serif;
        }
    }

    @media (min-width: 768px) {
        .cabecera {
            background-image: radial-gradient(
